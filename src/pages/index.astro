---
import Layout from '../layouts/Layout.astro'

const response = await fetch('https://kings-league-api.leotroche.workers.dev/teams')
const teams = await response.json()
---

<Layout title='Welcome to Astro.'>
  <div class='min-h-screen bg-[#111]'>
    <div class='container mx-auto'>
      <header class='flex'>
        {
          teams.map(({ id, image, name }) => {
            return (
              <a href={`/teams/${id}`}>
                <img class='aspect-square w-16' src={image} alt={name} />
              </a>
            )
          })
        }
      </header>
    </div>
  </div>
</Layout>
